<div id="page-content">
<div class="container">
  <h1 class = "text-center mt-4">Create a new article</h1>

  <%= render 'shared/errors'%>
  <div class = "row justify-content-center">
  <%= form_with scope: :article, class: "shadow p-3 mb-3 bg-info" , url: articles_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :title , class: "col-2 col-form-label text-light"%><br/> 
      <div class = "col-10">
      <%= f.text_field :title , class: "form-control shadow rounded " ,placeholder:  "Title of article"  %>
      </div>
    </div>
  <div class="form-group row">
      <%= f.label :description, class: "col-2 col-form-label text-light" %><br/> 
      <div class = "col-10">
      <%= f.text_area :description, rows: 10,class: "form-control sahdow rounded", placeholder: "Description of article" %> 
      </div>
  </div>
      <div class="form-group col-md-2 text-center">
      <%= f.submit class: "btn btn-outline-light btn-lg"%> 
    </div>
  <% end %>
  <%= link_to 'Return to articles listing', articles_path,class: "text-center" %> 
</div>
</div>
</div>